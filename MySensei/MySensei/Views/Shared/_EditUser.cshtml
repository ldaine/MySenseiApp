@model MySensei.Models.UserEditModel
<div class="col-xs-6">
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @if (User.IsInRole("Administrators"))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.UserName)
            @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    }
        
    <div class="form-group">
        @Html.LabelFor(x => x.Address)
        @Html.EditorFor(x => x.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Zip)
        @Html.EditorFor(x => x.Zip, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.City)
        @Html.EnumDropDownListFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Country)
        <p>Danmark</p>
    </div>
</div>
<div class="col-xs-6">
    <div class="form-group">
        @Html.LabelFor(x => x.Avatar)
        @Html.EditorFor(x => x.Avatar, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Gender)
        @Html.EnumDropDownListFor(x => x.Gender, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Biography)
        @Html.EditorFor(x => x.Biography, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthday)
        @Html.EditorFor(x => x.Birthday, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PrimaryLanguage)
        @Html.EnumDropDownListFor(x => x.PrimaryLanguage, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Confirm changes (please enter your password): </label>
        <input name="password" type="password" class="form-control" />
    </div>
</div>
