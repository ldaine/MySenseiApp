@model MySensei.Models.RegisterModel
@{ ViewBag.Title = "Register User";}
@{
    Layout = "~/Views/Shared/_LoginFront.cshtml";
}
<h1>Welcome, guest!</h1>
<h4>Create a new account as a Student.</h4>
@Html.ValidationSummary(false)
@using (Html.BeginForm("RegisterStudent", "Account"))
{

    <div class="form-group">
        <label>First name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label>Last name</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", autocomplete = "off" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", autocomplete = "off" })
    </div>

    <button type="submit" class="button-blue">Register</button>
    <p>@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })</p>
}