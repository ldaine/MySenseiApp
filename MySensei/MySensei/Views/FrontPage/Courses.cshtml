@model IEnumerable<MySensei.Models.AppCourse>
@{
    ViewBag.Title = "Index";
}

<h3>Welcome, @User.Identity.Name !</h3>
@foreach (var obj in Model)
{
    <div style="width: 300px; height: 250px; display: inline-block; border: 1px solid black; padding: 5px; margin: 5px;">
        <h3>@obj.Headline</h3>
        <ul>
            <li>Description: @obj.Description</li>
            <li>Location: @obj.Location</li>
            <li>Price: @obj.Price dkk</li>
            <li>Maximum attendance: @obj.MaxAttendance</li>
            <li>@obj.CourseImage</li>
        </ul>
        @Html.ActionLink("Details", "Details", new { id = obj.ID })
    </div>
}