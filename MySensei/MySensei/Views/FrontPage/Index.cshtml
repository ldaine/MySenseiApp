@model MySensei.Models.FrontPageModel
@{
    Layout = "~/Views/Shared/_FrontPage.cshtml";
}
@{ ViewBag.Title = "MySensei | Learn what you want to!";}

@Html.Partial("~/Views/Shared/_FrontPageNav.cshtml")

<div class="wrapper">
    <h1>Learn what you want to!</h1>
    <h2>With MySENSEI find the best teacher <br /> and start your lesson</h2>
</div>
<div class="search">
    <div class="search-box">
    <div id="search_bar">
        @using (Html.BeginForm("Lessons", "FrontPage"))
        {
            <p class="name">
                @Html.TextBox("searchString", "Search Lessons", new { @class = "feedback-input" })
                <input type="submit" value="Search" id="button-blue"/>
            </p>
        }
    </div>

    <div id="search_bar">
        @using (Html.BeginForm("Location", "FrontPage"))
        {
            <div class="ddl">
                @Html.EnumDropDownListFor(x => x.City, "--Select Location--")
                <button type="submit" id="button-blue">find</button>
            </div>
            @*@Html.DropDownListFor(x => x.Cities, (IEnumerable<SelectListItem>)(ViewBag.Location))*@
        }
    </div>
        </div>
</div>
<div class="categories">
    <div class="category-text">
        <h1>There always something to learn</h1>
        <h2>Explore and choose on of your lessons</h2>
    </div>
    <div class="category-box sport">
        @Html.ActionLink("Sport", "Categories", new { ids = 2 })
    </div>
    <div class="category-box music">
        @Html.ActionLink("Music", "Categories", new { ids = 1 })
    </div>
    <div class="category-box arts">
        @Html.ActionLink("Arts & Crafts", "Categories", new { ids = 3 })
    </div>
    <div class="category-box school">
        @Html.ActionLink("School", "Categories", new { ids = 4 })
    </div>
    <div class="category-box computer">
        @Html.ActionLink("Computer Skills", "Categories", new { ids = 7 })
    </div>
    <div class="category-box languages">
        @Html.ActionLink("Languages", "Categories", new { ids = 9 })
    </div>
    <div class="category-box travel">
        @Html.ActionLink("Travel", "Categories", new { ids = 8 })
    </div>
    <div class="category-box cooking">
        @Html.ActionLink("Cooking", "Categories", new { ids = 5 })
    </div>
    <div class="category-box ecocomics">
        @Html.ActionLink("Economics & Finance", "Categories", new { ids = 6 })
    </div>
    <div class="category-text">
        <h2>@Html.ActionLink("All Lessons", "Lessons", null,  new { @class = "button-link" })</h2>
    </div>
</div>
<div class="introduction" id="introduction">
    <div class="intro">
        <h1>We are ready to help you become a Sensei</h1>
        <h2>Become a member of MySensei society: Get the most exerienced tutors, learn new things and share them with others! With easy-to-use patform where you can always discover new things</h2>
    </div>
    <div class="intro-left">
        <div class="index-box">
            <img src="~/img/icons/loc.png" />
            <h2>1. Choose the city</h2>
            <p>Select the city where you want to look for lessons</p>
        </div>
        <div class="index-box">
            <img src="~/img/icons/window.png" />
            <h2>2. Find the teacher</h2>
            <p>Once you select the city, the list of teacher will pop out. <br /> Simple! Right?</p>
        </div>
        <div class="index-box">
            <img src="~/img/icons/wallet.png" />
            <h2>3. Book the service</h2>
            <p>Select the right lesson and book straight through the website. And now you're ready for your first lesson!</p>
        </div>
            </div>
    <div class="intro-right">
        <img src="~/img/icons/videoplayer.png" />
    </div>
</div>
<div class="teacher" id="teacher">
    <h2><b>Want to become a teacher of MySensei, and share you knowledge with others? Feel free to join our community</b></h2>
    <p>From sports coach to music teacher, teach others with skills where you good at! Meet different people, have fun and earn some extra money!</p>
    <h1>MySensei teacher benefits</h1>
    <ul>
        <li>You can meet interesting people</li>
        <li>You can earn money while havin fun</li>
        <li>Improve your skills in the same time</li>
        <li>Just be cool..! </li>
    </ul>
    <h2>@Html.ActionLink("Become a teacher", "Register", new { role = "teacher" }, new { @class = "button-link" })</h2>

</div>
