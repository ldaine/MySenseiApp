@model IEnumerable<MySensei.Models.AppCourse>

@foreach (var obj in Model)
{
    <div style="width: 300px; height: 275px; display: inline-block; border: 1px solid black; padding: 5px; margin: 5px;">

        <h3>@obj.Headline</h3>
        <ul>
            <li>Description: @obj.Description</li>
            <li>Location: @obj.Location</li>
            <li>Price: @obj.Price dkk</li>
            <li>Maximum attendance: @obj.MaxAttendance</li>
        </ul>
        
            @if (User.IsInRole("Teacher"))
            {
                <p>
                    @Html.ActionLink("Edit", "Edit", "Course", new { area = "", id = obj.ID }, null) | 
                    @Html.ActionLink("Details", "Details", "Course", new { area = "", id = obj.ID }, null) | 
                    @Html.ActionLink("Delete", "Delete", "Course", new { area = "", id = obj.ID }, null)
                </p>
            }
</div>
}

