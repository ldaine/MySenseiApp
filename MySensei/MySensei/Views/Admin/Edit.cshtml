@model MySensei.Models.AppUser
@{ ViewBag.Title = "Edit"; }
@Html.ValidationSummary(false)
<h2>Edit User</h2>
<div class="form-group">
    <label>Id</label> 
    <p class="form-control-static">@Model.Id</p>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label>First name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Last name</label>
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>User name</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Address)
        @Html.EditorFor(x => x.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Zip)
        @Html.EditorFor(x => x.Zip, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.City)
        @Html.EditorFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Country)
        @Html.EditorFor(x => x.Country, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Avatar)
        @Html.EditorFor(x => x.Avatar, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Gender)
        @Html.EditorFor(x => x.Gender, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Biography)
        @Html.EditorFor(x => x.Biography, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthday)
        @Html.EditorFor(x => x.Birthday, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PrimaryLanguage)
        @Html.EditorFor(x => x.PrimaryLanguage, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}