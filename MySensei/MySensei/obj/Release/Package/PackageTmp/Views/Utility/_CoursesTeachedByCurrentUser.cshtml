@model IEnumerable<MySensei.Models.AppCourse>

<div class="courses-cont">
    @if (Model.Count() == 0)
    {
        <i>You currentlly don't have any lesson to teach. <u>@Html.ActionLink("Create New Lesson", "Create", "Course", new { area = "" })</u></i>
    }
    else
    {
        foreach (var Model in Model)
        {
            <div class="courses">
                @if (Model.AppUser.Avatar != null)
                    {
                    <img src="@Model.AppUser.Avatar" />
                }
                else
                {
                    <div class="circular"> </div>
                }
                <div class="description">
                    <h2><b>@Model.Headline</b></h2>
                    <p style="color: #47b7b7"> @Model.AppUser.FullName</p>
                    <p>Description: @Model.Description</p>
                    <p>Location: @Model.Location</p>
                    <p>Category: @Model.AppCategory.Category</p>
                    <p>Maximum attendance: @Model.MaxAttendance</p>
                    @Html.ActionLink("Read More ", "Details", "Course", new { area = "", id = Model.ID }, null)
                    @if (User.IsInRole("Teacher"))
                    {
                            @Html.ActionLink("| Edit ", "Edit", "Course", new { area = "", id = Model.ID }, null)
                            @Html.ActionLink("| Delete", "Delete", "Course", new { area = "", id = Model.ID }, null)
                    }
                </div>
                <div class="price">
                    <p>Pricing: @Model.Price kr/h</p>
                    Rating:
                    <div class="rating">
                        <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                    </div>
                    @*@if (obj.CourseImage != null)
                    {
                        <li><img src="@obj.CourseImage" width="150" height="150" /></li>
                    }*@
                </div>

                
            </div>
        }
    }
</div>


