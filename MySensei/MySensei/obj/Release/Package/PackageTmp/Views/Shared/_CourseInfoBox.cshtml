@model MySensei.Models.AppCourse



<div class="courses">

    @if (Model.AppUser.Avatar != null)
    {
        <img src="@Model.AppUser.Avatar" />
    }
    else
    {
        <div class="circular"> </div>
    }
    <div class="description">
        <h2><b>@Model.Headline</b></h2>
        <p style="color: #47b7b7"> @Model.AppUser.FullName</p>
        <p>Description: @Model.Description</p>
        <p>Location: @Model.Location</p>
        <p>Category: @Model.AppCategory.Category</p>
        <p>Maximum attendance: @Model.MaxAttendance</p>
        @Html.ActionLink("Read More", "Details", new { id = Model.ID })
    </div>
    <div class="price">
        <p>Pricing: @Model.Price kr/h</p>
        Rating:
        <div class="rating">
            <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
        </div>
        <h2>@Html.ActionLink("Sign up", "Lessons", null, new { @class = "button-link" })</h2>
        @*@if (obj.CourseImage != null)
            {
                <li><img src="@obj.CourseImage" width="150" height="150" /></li>
            }*@
    </div>

</div>



