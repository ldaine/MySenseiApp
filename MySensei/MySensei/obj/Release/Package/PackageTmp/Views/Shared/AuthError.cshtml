
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="alert alert-warning" role="alert">
            <h3>Ups.. Something went wrong. You are already looged in.</h3>
        </div>
        <div class="alert alert-info" role="alert">
            <h3>What to do next?</h3>
            <p>@Html.ActionLink("Go to your MySensei Student account", "Index", "Home", new { area = "Students" }, new { })</p>
            <p>@Html.ActionLink("Go to your MySensei Teacher account", "Index", "Home", new { area = "Teachers" }, new { })</p>
            <p>@Html.ActionLink("Log out", "Logout", "Account", new { area = "" }, new { })</p>
        </div>
    </div>
</body>
</html>
