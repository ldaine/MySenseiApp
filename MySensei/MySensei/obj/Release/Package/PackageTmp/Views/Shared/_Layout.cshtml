<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/tempStyle.css" rel="stylesheet" />
    <link href="~/Content/AdminStyle.css" rel="stylesheet" />
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
                    @if (User.IsInRole("Administrators"))
                    {
                        @Html.Partial("~/Views/Shared/_AdminMenu.cshtml")
                    }
                    else if (User.IsInRole("Student"))
                    {
                        @Html.Partial("~/Views/Shared/_StudentMenu.cshtml")
                    }
                    else if (User.IsInRole("Teacher"))
                    {
                        @Html.Partial("~/Views/Shared/_TeacherMenu.cshtml")
                    }

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MySensei Project</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>